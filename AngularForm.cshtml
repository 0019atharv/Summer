                                            <option>B.Tech</option>
                                            <option>BCA</option>
                                            <option>B.Com</option>
                                            <option>BArch</option>
                                            <option>M.Tech</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3 ">
                                    <label for=" text" class="form-label">@*Phone No.*@</label>
                                    <span ng-show="myForm.$submitted || myForm.phone.$dirty">
                                        <span class="error errortext" style="color:red; font-size:smaller;font-weight:bold" ng-show="myForm.phone.$error.required"><br>Phone Number Required</span>
                                        <span class="error errortext" style="color:red; font-size:smaller;font-weight:bold" ng-show="((myForm.phone.$error.minlength || myForm.phone.$error.maxlength || myForm.phone.$error.pattern) &amp;&amp; myForm.phone.$dirty)"><br>Phone Number Should be 10 digits</span>
                                        @*<span class="error validtext" ng-show="myForm.phone.$valid"><br>Status: valid</span>*@
                                    </span>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa-solid fa-phone" id="phno-error"></i></span>
                                        <input type="number" name="phone" class="form-control" oninput=" this.value = this.value.replace(/[a-zA-Z+\-*\/.e]/g,'')" ng-model="phone" ng-pattern="phoneRegex" ng-disabled="myForm.gender.$error.pattern || !gender||
                                                                                               myForm.course.$error.pattern || !course" ng-minlength="10" ng-maxlength="10" required="" placeholder="Phone Number:">
                                    </div>
                                </div>
                                <div class="mb-3 ">
                                    <label for=" text" class="form-label">@*Email*@</label>
                                    <span ng-show="myForm.$submitted || myForm.mail.$dirty">
                                        <span class="error errortext" style="color:red; font-size:smaller;font-weight:bold" ng-show="myForm.mail.$error.required"><br>Email Required  </span>
                                        <span class="error errortext" style="color:red; font-size:smaller;font-weight:bold" ng-show="myForm.mail.$error.pattern"><br>Email Syntax: name@gmail.com  </span>
                                        @*<span class="error validtext" ng-show="myForm.mail.$valid"><br><i class="fa fa-exclamation-circle"></i> Status: valid</span>*@
                                    </span>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa fa-envelope" aria-hidden="true" id="email-error"></i></span>
                                        <input type="email" name="mail" class="form-control" ng-model="mail" ng-disabled="myForm.course.$error.pattern || !course||
                                                                                               myForm.phone.$error.pattern || !phone" ng-pattern="emailRegex" required="" placeholder="Email">
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for=" text" class="form-label">@*Password*@</label>&nbsp;&nbsp;&nbsp;&nbsp;
                                    <small>
                                        <span ng-show="myForm.$submitted || myForm.password.$dirty">
                                            <span class="error errortext" style="color:red; font-size:smaller;font-weight:bold" ng-show="myForm.password.$error.required"><br> Password Required</span>
                                            <span class="error errortext" style="color:red; font-size:smaller;font-weight:bold" ng-show="myForm.password.$error.pattern"><br>Contains atleast1 Uppercase,<br> lowercase, Number & digit</span>
                                            @*<span class="error validtext" ng-show="myForm.password.$valid"><br><i class="fa fa-exclamation-circle"></i> Status: valid</span>*@
                                        </span>
                                    </small>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa-solid fa-lock" id="password-error"></i></span>
                                        <input type="password" name="password" class="form-control" ng-model="password" ng-disabled="myForm.phone.$error.pattern || !phone||
                                                                                               myForm.mail.$error.pattern || !mail" ng-pattern="passwordRegex" required="" placeholder="Password">
                                    </div>
                                </div>
                                <div class="form-check mb-3">
                                    <label class="form-check-label">
                                        <span ng-show="myForm.$submitted || myForm.check.$dirty">
                                            <span class="error errortext" style="color:red; font-size:smaller;font-weight:bold" ng-show="myForm.check.$error.required"><br><i class="fa fa-exclamation-circle"></i> This needs to be checked first</span>
