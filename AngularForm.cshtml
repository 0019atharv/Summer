            <div class="input-group">
                <span class="input-group-text"><i class="fa-solid fa-user" id="lname-error"></i></span>
                <input type="text" placeholder="Last Name" ng-model="lname" name="lname" ng-disabled="myForm.fname.$error.pattern || !fname" class="form-control" ng-pattern="fnameRegex" required>
            </div>
        </div>
