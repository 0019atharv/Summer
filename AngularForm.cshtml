            <div class="container p-4 mt-3 mb-4 text-black" mx-auto>
                
                <form class="myForm" id="myForm" action="#" onsubmit="validateForm" name="myForm">
                    <h3 class="card-title">Registration Form</h3><br>
                    <hr style="height:4px ">
                    <div class="mb-1 mt-1 row">
                        <div class="col " id="input-group">
                            <label for=" text" class="form-label">
                                @*First Name*@
                            </label>
                            <span ng-show="myForm.$submitted || myForm.fname.$dirty">
                                <span class="error errortext" style="color:red; font-size:smaller; font-weight:bold" ng-show="myForm.fname.$error.required"><br>First Name Required</span>
                                <span class="error errortext" style="color:red; font-size:smaller; font-weight:bold" ng-show="myForm.fname.$error.pattern"><br>First Name cannot be Number</span>
                                @*<span class="error validtext" ng-show="myForm.fname.$valid"><br>Status: valid</span>*@
                            </span>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-user" id="fname-error"></i></span>
                                <input type="text" placeholder="First Name" ng-model="fname" name="fname" class="form-control" ng-pattern="fnameRegex" required>

                            </div>
                        </div>
    <div class="col">
        <label for=" text" class="form-label">
                        @*Last Name*@
                        </label>
        <span ng-show="myForm.$submitted || myForm.lname.$dirty">
