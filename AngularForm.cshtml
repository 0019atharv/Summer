<script>

    var app = angular.module("myApp", []);
    app.controller("validateCtrl", function ($scope) {
        $scope.emailRegex = /^[a-zA-z]+[a-zA-Z0-9]+[@@]{1}gmail.com$/;
        $scope.fnameRegex = /^[A-Za-z]*$/;
        $scope.mobileRegex = /^[\+]?[(]?[0-9]{3}[)]?[-\s\]?[0-9]{3}[-\s\]?[0-9]{4,5}$/;
        $scope.passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@@#$%^&*()\-_=+{};:,<.>]).+$/;
        $scope.dobRegex = /^(19[0-9]{2}|20[0-2][0-9]|2023)-(0[1-9]|1[0-2])-([0-2][1-9]|3[01])$/;
        $scope.phoneRegex = /^(?!.*[e.])(.*)$/;
    });

</script>
