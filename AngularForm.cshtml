                                <div class="mb-3 ">
                                    <label for="Courses" class="form-label">@*Courses*@</label>
                                    <span ng-show="myForm.$submitted || myForm.course.$dirty">
                                        <span class="error errortext" style="color:red; font-size:smaller;font-weight:bold" ng-show="myForm.course.$error.required"> Course Required</span>
                                        @*<span class="error validtext" ng-show="myForm.course.$valid"><br><i class="fa fa-exclamation-circle"></i> Status: valid</span>*@
                                    </span>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa-sharp fa-solid fa-graduation-cap" id="courses-error"></i></span>
                                        <select name="course" class="form-control" ng-model="course" ng-disabled="myForm.gender.$error.pattern || !gender||
                                                                                               myForm.mydate.$error.pattern || !mydate" required="">
